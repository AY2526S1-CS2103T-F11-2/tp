<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: transparent; -fx-border-color: #3c3c3c; -fx-border-width: 0 0 1 0;"
      minHeight="50">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <!-- Person: ID + Name -->
      <ColumnConstraints hgrow="NEVER" minWidth="100" prefWidth="100" maxWidth="100" />
      <!-- Role -->
      <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="80" maxWidth="80" />
      <!-- Class -->
      <ColumnConstraints hgrow="NEVER" minWidth="150" prefWidth="150" maxWidth="150" />
      <!-- Contact: Phone + Email -->
      <ColumnConstraints hgrow="NEVER" minWidth="200" prefWidth="200" maxWidth="200" />
      <!-- Address -->
      <ColumnConstraints hgrow="ALWAYS" minWidth="100" prefWidth="180" />
      <!-- Attendance -->
      <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="80" maxWidth="80" />
      <!-- Payment -->
      <ColumnConstraints hgrow="NEVER" minWidth="90" prefWidth="90" maxWidth="90" />
    </columnConstraints>

    <!-- Column 1: ID + Name -->
    <VBox alignment="CENTER" GridPane.columnIndex="0" spacing="3">
      <padding>
        <Insets top="10" right="8" bottom="10" left="10" />
      </padding>
      <Label fx:id="id" styleClass="cell_small_label" alignment="CENTER" />
      <Label fx:id="name" text="\$name" styleClass="cell_big_label" wrapText="true" maxWidth="90" alignment="CENTER" />
    </VBox>

    <!-- Column 2: Role -->
    <VBox alignment="CENTER" GridPane.columnIndex="1">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <Label fx:id="role" text="\$role" wrapText="true" maxWidth="70" alignment="CENTER" />
    </VBox>

    <!-- Column 3: Classes -->
    <VBox alignment="CENTER" GridPane.columnIndex="2" spacing="4">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <FlowPane fx:id="classes" hgap="6" vgap="4" maxWidth="140" alignment="CENTER" />
    </VBox>

    <!-- Column 4: Phone + Email -->
    <VBox alignment="CENTER" GridPane.columnIndex="3" spacing="3">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <Label fx:id="phone" text="\$phone" alignment="CENTER" styleClass="cell_small_label" maxWidth="190" wrapText="true" />
      <Label fx:id="email" text="\$email" alignment="CENTER" styleClass="cell_small_label" maxWidth="190" wrapText="true" />
    </VBox>

    <!-- Column 5: Address -->
    <VBox GridPane.columnIndex="4" alignment="CENTER">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <Label fx:id="address" text="\$address" alignment="CENTER" styleClass="cell_small_label" wrapText="true" maxWidth="Infinity" />
    </VBox>

    <!-- Column 6: Attendance -->
    <VBox alignment="CENTER" GridPane.columnIndex="5">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <Label fx:id="attendance" text="\$attendance" alignment="CENTER" styleClass="cell_small_label" wrapText="true" maxWidth="70" />
    </VBox>

    <!-- Column 7: Payment Status -->
    <VBox alignment="CENTER" GridPane.columnIndex="6">
      <padding>
        <Insets top="10" right="8" bottom="10" left="8" />
      </padding>
      <Label fx:id="paymentStatus" text="\$status" alignment="CENTER" wrapText="true" maxWidth="80" />
    </VBox>
  </GridPane>
</HBox>
