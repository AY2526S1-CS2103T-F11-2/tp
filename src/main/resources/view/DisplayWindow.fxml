<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.text.TextFlow?>

<fx:root resizable="true" title="Contact Details" type="javafx.stage.Stage"
         xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
         minWidth="450" minHeight="300" width="500" height="450">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DisplayWindow.css" />
      </stylesheets>


      <VBox styleClass="display-window" VBox.vgrow="ALWAYS">
        <padding>
          <Insets top="10" right="10" bottom="10" left="10" />
        </padding>


        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    VBox.vgrow="ALWAYS"
                    style="-fx-background: #1e1e1e; -fx-background-color: #1e1e1e;">
          <padding>
            <Insets top="5" right="5" bottom="5" left="5" />
          </padding>

          <TextFlow fx:id="messageFlow"
                    style="-fx-background-color: #1e1e1e; -fx-line-spacing: 3px;">
          </TextFlow>
        </ScrollPane>
      </VBox>
    </Scene>
  </scene>
</fx:root>
