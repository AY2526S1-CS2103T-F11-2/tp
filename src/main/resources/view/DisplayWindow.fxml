<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>
<?import javafx.scene.text.TextFlow?>

<fx:root resizable="false" title="Display" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DisplayWindow.css" />
      </stylesheets>

      <HBox styleClass="display-window" alignment="CENTER" fx:id="helpMessageContainer">
        <children>
          <!-- Replaced Label with TextFlow for per-word colouring -->
          <TextFlow fx:id="messageFlow" id="messageFlow">
            <HBox.margin>
              <Insets right="5.0" />
            </HBox.margin>
          </TextFlow>
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </padding>
      </HBox>
    </Scene>
  </scene>
</fx:root>
